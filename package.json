{
  "name": "lux-db",
  "version": "1.0.1",
  "description": "Perfomant Json database with full-featured CRUD query APIs",
  "repository": "git@github.com:abubalo/lux-db.git",
  "author": "Abubakar Balogun <42701866+abubalo@users.noreply.github.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf ./build",
    "build": "yarn-run-all format lint test clean && tsc",
    "start": "node src",
    "local": "ts-node src npx prettier --check src/**/*.json",
    "local:watch": "nodemon src -e ts,json --exec 'yarn run local'",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.js\"",
    "postlocal": "npm run format",
    "format:check": "npx prettier --check src",
    "test": "jest"
  },
  "keywords": [
    "typescript",
    "node",
    "eslint",
    "prettier",
    "jest",
    "supertest"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.6.4",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "zod": "^3.22.3"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.0",
    "@types/winston": "^2.4.4",
    "chalk": "^5.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "winston": "^3.10.0"
  }
}
