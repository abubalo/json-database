{
  "name": "lux-db",
  "version": "1.0.10",
  "description": "A high-performance document-based JSON database equiped with CRUD query API functionalities",
  "repository": "git@github.com:abubalo/lux-db.git",
  "author": "Abubakar Balogun <42701866+abubalo@users.noreply.github.com>",
  "license": "MIT",
  "main": "dist/lux-db.js",
  "module": "dist/lux-db.mjs",
  "types": "dist/lux-db.d.ts",
  "files": [
    "dist"
  ],
  "private": false,
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm-run-all clean lint && tsup src/**/*.ts --format cjs,esm --dts  ",
    "start": "node src",
    "local": "ts-node src",
    "local:watch": "nodemon src -e ts,json --exec 'yarn run local'",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.json\"",
    "format:check": "npx prettier --check src",
    "test": "jest"
  },
  "keywords": [
    "database",
    "json-db",
    "json-database",
    "json database",
    "typescript json database",
    "javascript json database",
    "js-db",
    "lux-db",
    "luxDB",
    "lux DB",
    "luxdb"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "zod": "^3.22.3"
  },
  "exports": {
    ".": {
      "import": "./dist/lux-db.mjs",
      "require": "./dist/lux-db.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
