{
  "name": "lux-db",
  "version": "1.0.2",
  "description": "Perfomant Json database with full-featured CRUD query APIs",
  "repository": "git@github.com:abubalo/lux-db.git",
  "author": "Abubakar Balogun <42701866+abubalo@users.noreply.github.com>",
  "license": "MIT",
  "main": "./build/src/lux-db.js",
  "private": false,
  "scripts": {
    "clean": "rimraf ./build",
    "build": "npm-run-all format lint test clean && tsc",
    "start": "node src",
    "local": "ts-node src",
    "local:watch": "nodemon src -e ts,json --exec 'yarn run local'",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.json\"",
    "format:check": "npx prettier --check src",
    "test": "jest"
  },
  "keywords": [
    "database",
    "json-db",
    "json-database",
    "json database",
    "typescript json database",
    "javascript json database"
  ],
  "devDependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "zod": "^3.22.3"
  }
}
