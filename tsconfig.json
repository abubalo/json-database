{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "allowJs": false,
      "strict": true,
      "noEmitOnError": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noEmit": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node", "jest"],
      "lib": ["es2018"],
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./"
    },
    "include": ["src/**/*", "package.json"],
    "exclude": ["node_modules", "src/LuxDB.test.ts", "./dist"]
  }