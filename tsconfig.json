{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "allowJs": false,
      "strict": true,
      "noEmitOnError": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noEmit": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node", "jest"],
      "lib": ["es2018"],
      "outDir": "./dist",
      "rootDir": "./",
      "baseUrl": "./"
    },
    "include": ["src/**/*", "package.json"],
    "exclude": ["node_modules", "test/**/*.test", "./dist", ]
  }